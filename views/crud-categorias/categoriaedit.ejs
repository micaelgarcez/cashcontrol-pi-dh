<%- include('../parts/head',{title:'CASH - Alterando Categoria'}); %>
<link rel="stylesheet" href="/css/form-pizza.css">
<form id="form-pizza" method="POST" action="/categorias/<%= categoria.id%>/update?_method=PUT">
  <h1 name="cash" id="cash">CASH CONTROL</h1>
  <h1> Editar Categoria </h1>
  <% if (typeof(erros) != "undefined") { %>
      <p style="color: red"> ERRO </p>
      <ul>
        <% erros.forEach((erro) => { %>
            <li><%= erro.msg %></li>
        <% }) %>
      </ul>
  <% } %>

  <label>
    Nome:
    <input type="text" name="nome" id="nome" value="<%= categoria.nome %>" placeholder="Digite o nome da categoria">
  </label>

  <label>
    Tipo:
    <select name="tipo" id="tipo">
        <option selected disabled>Selecione</option>
        <option value="1" <%= categoria.tipo == '1' ? 'selected' : ''%>>Fixa</option>
        <option value="2" <%= categoria.tipo == '2' ? 'selected' : ''%>>Vari√°vel</option>
    </select>
  </label>
<button type="submit">Salvar</button>
</form>
<%- include('../parts/foot'); %>